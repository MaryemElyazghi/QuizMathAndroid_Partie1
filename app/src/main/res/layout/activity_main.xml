<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- En-tête avec titre et score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_large">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_main"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_score"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Carte contenant les nombres -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large"
                android:gravity="center">

                <!-- Premier nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_number1"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/textSecondary" />

                <TextView
                    android:id="@+id/tvNumber1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/number_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Deuxième nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_number2"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/textSecondary" />

                <TextView
                    android:id="@+id/tvNumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/number_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_small" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sélection du niveau de difficulté -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_difficulty"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small" />

        <RadioGroup
            android:id="@+id/rgDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_medium">

            <RadioButton
                android:id="@+id/rbEasy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/difficulty_easy"
                android:textColor="@color/easyColor"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/difficulty_medium"
                android:textColor="@color/mediumColor" />

            <RadioButton
                android:id="@+id/rbHard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/difficulty_hard"
                android:textColor="@color/hardColor" />
        </RadioGroup>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instruction"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- Boutons d'opération -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_medium">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="@dimen/button_width_operation"
                android:layout_height="@dimen/button_height"
                android:text="@string/btn_add"
                android:textSize="@dimen/text_size_button"
                android:textColor="@color/textWhite"
                android:background="@color/btnAddColor"
                android:layout_margin="@dimen/margin_small" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="@dimen/button_width_operation"
                android:layout_height="@dimen/button_height"
                android:text="@string/btn_subtract"
                android:textSize="@dimen/text_size_button"
                android:textColor="@color/textWhite"
                android:background="@color/btnSubtractColor"
                android:layout_margin="@dimen/margin_small" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="@dimen/button_width_operation"
                android:layout_height="@dimen/button_height"
                android:text="@string/btn_multiply"
                android:textSize="@dimen/text_size_button"
                android:textColor="@color/textWhite"
                android:background="@color/btnMultiplyColor"
                android:layout_margin="@dimen/margin_small" />
        </LinearLayout>

        <!-- Carte du résultat -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_result"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/textSecondary" />

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result_placeholder"
                    android:textSize="@dimen/result_size"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_small" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bouton Générer -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_generate"
            android:textSize="@dimen/text_size_button"
            android:textColor="@color/textWhite"
            android:background="@color/btnGenerateColor"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Boutons supplémentaires -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_medium">

            <Button
                android:id="@+id/btnResetScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_reset_score"
                android:textColor="@color/textWhite"
                android:background="@color/incorrectColor"
                android:layout_marginEnd="@dimen/margin_small" />

            <Button
                android:id="@+id/btnShowHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_show_history"
                android:textColor="@color/textWhite"
                android:background="@color/colorPrimary"
                android:layout_marginStart="@dimen/margin_small" />
        </LinearLayout>

        <!-- Zone d'historique -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_history"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/cardBackground">

            <TextView
                android:id="@+id/tvHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/textPrimary"
                android:text="@string/msg_empty_history" />
        </ScrollView>

    </LinearLayout>
</ScrollView>